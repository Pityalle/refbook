=haml :_header

%h1
  Search

.issue
  =flash[:issue]

%p
  See refs from a region:

  %ul#regions
    %li
      %a{href: "/search/ALL"}
        All Regions
    -# the rest of the regions

:javascript
  var region_keys = #{@region_keys};
  var region_values = #{@region_values};
  
  for (var i = 0; i < region_keys.length; i++) {
    var r = [
      "<li><a href=\"/search/",region_values[i],"\">",
      region_keys[i],
      "</a></li>"
    ].join('');
    $('#regions').append(r);
  }





