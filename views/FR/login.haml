.form_box
  %form{name: "login", action: "/login", method: "post"}
    %label{for: "Email"}
      Email
    %input{type: "email", name: "username", placeholder:"email", id:"start"}

    %label{for: "Password:"}
      Password
    %input{type: "password", name: "password", placeholder: "password"}

    %input{name: "d", type: "hidden", value: "#{params[:d]}"}


    %input.button{type: "submit", value: "Login"}

%p
  Don't have an account? You can 
  %a{href: '/create'}<
    create
  one!

%p
  Forgot your password? 
  %a{href: '/reset'}<
    Reset
  it.

:javascript
  $('#start').focus();