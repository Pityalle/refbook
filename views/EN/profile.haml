  %p
    %span.ex
      !
    It looks like you haven't uploaded a profile pic yet! Do so on your 
    %a{href: "/settings"}<
      settings
    page.

%p
  %a{href: "/profile/#{session[:user]['objectId']}"}<
    This
  is your public profile.

%p
  You've got #{@total} review#{@total == 1 ? '' : 's'}. 
  - if @total > 0
    #{@total == 1 ? "It's" : "They're"} listed below.
  - else
    %span.ex
      !
    Encourage people to review you!

%img#prof_pic{src: "#{@url}", width: 300}



%table.skinny#theTable
  %thead
    %tr
      %td
        Rating
      %td
        Comments
      
  %tbody


:javascript
  var reviews = #{@review_list};
  var odd = false;
  for (var i = 0; i < reviews.length; i++) {
    var r = [
      "<tr class=\"",(odd) ? "odd" : "even","\">",
      "<td>",reviews[i][0],"</td>", //rating
      "<td>",reviews[i][1],"</td>", //comments
    ].join(' ');
      
      r += "</tr>";
    odd = !odd;  
    $("#theTable tbody").append(r);
  };

  $('.small').hide();

  $('.more').click(function(){
    $('.small').show();
  });

  $('.less').click(function(){
    $('.small').hide();
  });

